<section class="card">
  <div class="photo">
  <img src="<%= @user.photo %>" width="90px" height="90px"/>
  </div>
  <div class="user_card">
    <div class="user_name"><%= @user.name %></div>
    <div class="user_posts">Number of posts: <%= @user.posts_counter %></div>
  </div>
</section>

<div class="bio">
  <div class="bio_title">Bio</div>
  <p class="bio_data"><%= @user.bio  %></p>
</div>

<section class="posts">
  <% @user.last_3_posts.each do |post| %>
    <div class="post">
      <div class="post_title"><%= link_to post.title, user_post_path(@user, post)  %></div>
      <div class="post_text"><%= post.text %></div>
      <div class="post_media">
        <div class="post_comments">Comments: <%= post.comments_counter %></div>
        <section class="post_likes">Likes: <%= post.likes_counter %></div>
        <div>
          <%= button_to "Like", user_post_likes_path(@user, post), params: { like: { author_id: @user.id, post_id: post.id}} %>
        </div>
      </div>
      <br />    
    </div>
  <% end %>
</section>

<div class="post_button">
  <button><%= link_to "See all posts", user_posts_path(@user) %></button>
  <button><%= link_to "Add a post", new_user_post_path(@user) %></button>
</div> 
