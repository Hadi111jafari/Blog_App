<div class="form">
  <h1>New Post</h1>
  <%= form_with model: @post, url: user_posts_path  do |form| %>
    <div class="form-title">
      <%= form.label :title  %>
      <%= form.text_field :title, class: 'title-form'%>
    </div>

    <div class="form-text">
      <%= form.label :text %>
      <%= form.text_area :text, class: 'text-form'%>
    </div>

    <div class="form-submit">
      <%= form.submit "Add" %>
    </div>
  <% end %>
</div>