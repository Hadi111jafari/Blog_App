<div class="form">
  <h1>New Comment</h1>
  <%= form_with model: @comment, url: user_post_comments_path do |form| %>
    <div class="form-text">
      <%= form.label :text %>
      <%= form.text_area :text, class: 'text-form'%>
    </div>

    <div class="form-submit">
      <%= form.submit "Add Comment" %>
    </div>
  <% end %>
</div>